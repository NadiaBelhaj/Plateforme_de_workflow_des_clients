
{% extends 'clientheritage.html.twig' %}



{% block body %}
     <div >
        {{include ('view/headerT.html.twig') }}
    </div>
</div>
<section id="main-content">
      <section class="wrapper">
     <h4>Liste des clients<i class="fa fa-angle-right"></i>Fiche du Client</h4>   
    
</div>


    <table class="table table-striped table-condensed .col-md-1 " style="
    margin: 20px;">
    <section id="unseen">

        <tbody>
            <tr>
                <th class="numeric">Id</th>
                <td class="numeric">{{ client.id }}</td>
            </tr>
            <tr>
                <th class="numeric">Raison sociale</th>
                <td class="numeric">{{ client.company }}</td>
            </tr>
