                <th class="numeric">Nom complet</th>
                <td class="numeric">{{ client.contactName }}</td>
            </tr>
            <tr>
                <th class="numeric">Grade du responsable</th>
                <td class="numeric">{{ client.contactPosition }}</td>
            </tr>
            <tr>
