            </tr>
            <tr>
                <th class="numeric">Adresse</th>
                <td class="numeric">{{ client.adresse }}</td>
          
        </tbody>
    </table>

    <a  class="btn btn-primary btn-l"  href="{{ path('client_index') }}">Retour</a>

    
  </section>
</section>
